body
    align-items: center
    background-color: #f6f6f6
    display: flex
    font-size: 14px
    justify-content: center
    margin: 0px
    min-height: 100vh

.btn-success
    &:active
    &:focus
        box-shadow: none !important
        outline: none !important


.mtop16
    margin-top: 16px

.box
    background-color: #fff
    border-radius: 8px
    border: 1px solid #d6d6d6
    position: relative
    width: 500px
    .btn-success
        background-color: #E85722
        border: 0px
        width: 100%
    .btn-success:not(:disabled):not(.disabled):active
        background-color: #E85722
        border: 0px
    .form-control
        &:focus
        &:active
            outline: none
            box-shadow: none
    .inside
        padding: 16px
    .header
        background-color: #00acff
        border-radius: 8px 8px 0px 0px
        padding: 16px
        a
            img
                display: block
                margin: 0px auto
                width: 50%
    .footer
        text-align: center
        a
            display: inline-block
            font-size: 0.8em
            &:last-child
                margin-left: 24px

@media only screen and (max-width 728px)
    .box
        width: 88%
